generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName        String
  lastName         String
  otherNames       String?
  age              Int
  weight           Int
  height           Int
  healthConditions String?
  bookings         Booking[]
}

// model Admin {
